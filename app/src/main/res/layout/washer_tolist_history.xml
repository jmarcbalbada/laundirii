<!-- your_client_item_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:padding="16dp">

    <!-- Your client item UI components go here -->
    <TextView
        android:id="@+id/textViewOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID" />

    <TextView
        android:id="@+id/textViewClientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Name" />

    <TextView
        android:id="@+id/textViewCourierStatus"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="Courier Status" />

    <!-- Add other TextViews or UI components as needed -->

</LinearLayout>
